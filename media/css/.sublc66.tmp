/* ~ ~ ~ ~ ~ ~ ~ ~ ~ ~ ~ ~ ~ ~ ~ ~ ~ ~ ~ ~ ~ ~

//  Homepage styles

// ~ ~ ~ ~ ~ ~ ~ ~ ~ ~ ~ ~ ~ ~ ~ ~ ~ ~ ~ ~ ~ */

/*  GENERAL RESETS NOT IN NORMALIZE.CSS
// ~ ~ ~ ~ ~ ~ ~ ~ ~ ~ ~ ~ ~ ~ ~ ~ ~ ~ ~ ~ ~ */

html {
    box-sizing: border-box;
    color: inherit;
}

body,
 input,
 textarea {
    font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif;
    color: #404D5B;
    -webkit-font-smoothing: subpixel-antialiased;
    -moz-osx-font-smoothing: subpixel-antialiased;
}

*,
 *:before,
 *:after {
    box-sizing: inherit;
}

a:link,
 a:hover,
 a:active,
 a:visited {
    text-decoration: none;
    color: inherit;
}

ul {
    margin: 0;
    padding-left: 0;
}

.clear:before,
 .clear:after {
    display: table;
    content: ' ';
}

.clear:after {
    clear: both;
}


/*  ANCHOR HOVERS
// ~ ~ ~ ~ ~ ~ ~ ~ ~ ~ ~ ~ ~ ~ ~ ~ ~ ~ ~ ~ ~ */

a {
    -webkit-transition: color .2s;
            transition: color .2s;
}

a:hover {
    color: #D04C3F;
}

.anchor-no-hover:hover {
    color: inherit;
}

.anchor-underline-offset {
    border-bottom: 1px solid white;
}


/*  LAYOUT
// ~ ~ ~ ~ ~ ~ ~ ~ ~ ~ ~ ~ ~ ~ ~ ~ ~ ~ ~ ~ ~ */

.home-body {
    /*padding: 80px 0 0;*/
}

.section-wrap {
    padding: 0 20px;
}

.section-full-width {
    margin: 0 auto;
}

.section-constrained-width {
    max-width: 960px;
    margin: 0 auto;
}

.atlas-section {
    padding: 60px 0;
    border-top: 1px solid #DDDDDD;
}

/*  GENERAL TYPE
// ~ ~ ~ ~ ~ ~ ~ ~ ~ ~ ~ ~ ~ ~ ~ ~ ~ ~ ~ ~ ~ */

.subhead {
    max-width: 400px;
    margin: 0 auto 10px;
}

.subhead-deck {
    max-width: 400px;
    margin: 0 auto 20px;
    text-align: center;
}

.atlas-btn-icon {
    margin-right: 6px;
}

.offset-text {
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
}

/*  HEADER
// ~ ~ ~ ~ ~ ~ ~ ~ ~ ~ ~ ~ ~ ~ ~ ~ ~ ~ ~ ~ ~ */

.site-header {
    position: relative;
    display: table;
    width: 100%;
    margin-top: 80px;
    margin-bottom: 20px;
}

.subhead-wrap {
    max-width: 500px;
    margin: 0 auto 40px;
    text-align: center;
}


/*  LOGO (silly, looking forward to changing)
// ~ ~ ~ ~ ~ ~ ~ ~ ~ ~ ~ ~ ~ ~ ~ ~ ~ ~ ~ ~ ~ */

.site-wordmark {
    display: block;
    float: left;
    margin-bottom: -10px;
    white-space: nowrap;
    text-decoration: none;
}

.site-logo-copy {
    font-family: 'PT Sans Narrow', sans-serif, 'Arial';
    font-weight: 500;
    line-height: 100%;
    margin: 0;
    text-transform: uppercase;
}

.site-logo-firstline {
    font-size: 46.5px;
    display: block;
    margin-bottom: -7px;
    letter-spacing: 0;
}

.site-logo-secondline {
    font-size: 18px;
    margin-left: 1px;
    color: #A0A6A9;
}



/*  NAV
// ~ ~ ~ ~ ~ ~ ~ ~ ~ ~ ~ ~ ~ ~ ~ ~ ~ ~ ~ ~ ~ */

.site-nav {
    display: none;
    width: 100%;
}

.site-nav-list {
    float: right;
    margin: 0;
    padding: 0;
}

.site-nav-item {
    display: inline-block;
    margin-bottom: 0;
    list-style-type: none;
    padding: 0 10px;
    -webkit-transition: color .2s;
            transition: color .2s;
}

.site-nav-item:first-child {
    padding-left: 0;
}

.site-nav-item:last-child {
    padding-right: 0;
}

@media screen and (min-width: 48em) {
    .site-nav {
        display: table-cell;
    }
}


/*  SLIDEIN NAV
// ~ ~ ~ ~ ~ ~ ~ ~ ~ ~ ~ ~ ~ ~ ~ ~ ~ ~ ~ ~ ~ */

.site-nav-slidein-item {
    -webkit-transition: color .2s;
            transition: color .2s;
}

@media screen and (min-width: 48em) {
    .site-nav-slidein-button {
        display: none;
    }
}


/*  EXAMPLES
// ~ ~ ~ ~ ~ ~ ~ ~ ~ ~ ~ ~ ~ ~ ~ ~ ~ ~ ~ ~ ~ */

.example-wrap {
    margin: 0 auto 40px;
}

@media screen and (min-width: 48em) {
    .example-wrap {
        margin: 0 auto;
    }
    .example-wrap:first-child {
        padding: 0 20px 0 0;
    }

    .example-wrap:nth-child(2) {
        padding: 0 10px;
    }

    .example-wrap:last-child {
        padding: 0 0 0 20px;
    }
}

.example-image {
    margin: 0 auto 20px;
}

.example-caption {
    margin: 0;
    text-align: center;
}

/*  SEARCH
// ~ ~ ~ ~ ~ ~ ~ ~ ~ ~ ~ ~ ~ ~ ~ ~ ~ ~ ~ ~ ~ */

.search-wrap {
    position: relative;
    width: 100%;
}

.atlas-search {
    float: left;
    width: 100%;
    margin-bottom: 15px;
    padding: 20px;
}

@media screen and (min-width: 480px) {
    .atlas-search {
        width: 80%;
    }
}

/* Triple classed to override pure.css specificity*/
.atlas-search-btn.atlas-search-btn.atlas-search-btn {
    width: 25%;
    margin-bottom: 10px;
}

@media screen and (min-width: 480px) {
    .atlas-search-btn.atlas-search-btn.atlas-search-btn {
        float: right;
        width: 18%;
    }
}

.subhead-search {
    margin-bottom: 15px;
}


/*  SELECT
// ~ ~ ~ ~ ~ ~ ~ ~ ~ ~ ~ ~ ~ ~ ~ ~ ~ ~ ~ ~ ~ */

.select-full {
    width: 100%;
}

.select-wrap:first-child {
    margin-bottom: 20px;
}

@media screen and (min-width: 35.5em) {
    .select-wrap:first-child {
        /*padding-right: 10px;*/
    }

    .select-wrap:last-child {
        /*padding-left: 10px;*/
    }
    .select-menu-wrap {
        width: 75%;
        margin: 0 auto;
    }
}


/*  Video
// ~ ~ ~ ~ ~ ~ ~ ~ ~ ~ ~ ~ ~ ~ ~ ~ ~ ~ ~ ~ ~ */

.video-section {
    position: relative;
}

.video-wrap {
    position: absolute;
    z-index: 1;
    top: 33.5%;
    left: 32%;
    color: white;
    max-width: 340px;
    padding: 0 20px;
    pointer-events: none;
}

.video-subhead {
    margin-bottom: 100px;
}

.video-subhead-deck {

}

.hausman-video {
    margin: 0 auto;
}

.sublimevideo-View {
    z-index: 2;
}



/*  FOLLOW @ATLASFACTS
// ~ ~ ~ ~ ~ ~ ~ ~ ~ ~ ~ ~ ~ ~ ~ ~ ~ ~ ~ ~ ~ */

.follow-atlasfacts-btn {
    display: block;
    max-width: 250px;
    margin: 20px auto 0;
}

.atlasfacts-icon {
    margin-right: 6px;
}


/*  BOTTOM NAV
// ~ ~ ~ ~ ~ ~ ~ ~ ~ ~ ~ ~ ~ ~ ~ ~ ~ ~ ~ ~ ~ */

.site-footer {
    padding: 50px 0 0;
    background-color: rgb(230, 230, 230);
}

.atlas-bottomnav {
    margin-bottom: 40px;
}

.bottomnav-topper {
    position: relative;
    display: block;
    width: 100%;
    margin-bottom: 20px;
    padding-bottom: 10px;
    border-bottom: 1px solid #DDDDDD;
}

.cid-logo {
    margin-bottom: 20px;
    padding: 0 10px 20px;
    border-bottom: 1px solid #DDDDDD;
}

.bottomnav-social-wrap {
    margin: 0 auto 10px;
    text-align: center;
}


@media screen and (min-width: 35.5em) {
    .bottomnav-social-wrap {
        position: absolute;
        right: 0;
        bottom: 10px;
        margin-bottom: 0;
    }
    .cid-logo {
        margin-bottom: 0;
        padding: 0 20px 0 0;
        border-bottom: none;
    }
}


.bottomnav-social-btn {
    width: 40px;
    height: 40px;
    padding: 10px;
    text-align: center;
    border-radius: 50%;
    border: 2px solid #D8D8D8;
}

.bottomnav-social-btn:nth-of-type(1) {
    right: 50px;
}

.bottomnav-social-btn:nth-of-type(2) {
    right: 0;
}

.site-nav-full-toplevel {
    font-size: 1.5em;
    margin-bottom: 10px;
}

.site-nav-full-toplevel > .site-nav-full-link {
    display: inline-block;
    margin-bottom: 6px;
}

.site-nav-full-secondlevel {
    font-size: .65em;
    margin-bottom: 3px;
    margin-left: 18px;
    list-style-type: disc;
}

@media screen and (min-width: 48em) {
    .site-nav-full-list-toplevel:first-child {
        padding-right: 20px;
    }
    .site-nav-full-list-toplevel:last-child {
        padding-left: 20px;
    }
}



/*  LICENSE
// ~ ~ ~ ~ ~ ~ ~ ~ ~ ~ ~ ~ ~ ~ ~ ~ ~ ~ ~ ~ ~ */

.license-wrap {
    padding: 30px 20px;
    background-color: gray;
}

.license-copy {
    font-weight: 500;
    display: block;
    text-align: center;
    color: white;
}
